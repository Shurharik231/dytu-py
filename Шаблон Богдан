            },
            {
                id: 8,
                name: "–î–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω—ã–µ —Å–∞–¥–æ–≤—ã–µ –≥–Ω–æ–º—ã (–∫–æ–º–ø–ª–µ–∫—Ç 3 —à—Ç.)",
                price: 1250,
                image: "https://picsum.photos/id/64/600/600",
                category: "–î–µ–∫–æ—Ä"
            }
        ]
        
        let cart = []
        
        // Render products
        function renderProducts() {
            const grid = document.getElementById('productsGrid')
            grid.innerHTML = ''
            
            products.forEach(product => {
                const card = document.createElement('div')
                card.className = `product-card bg-white border border-zinc-100 rounded-3xl overflow-hidden group`
                card.innerHTML = `
                    <div class="relative">
                        <img src="${product.image}" class="w-full h-64 object-cover group-hover:scale-110 transition duration-700">
                        <div class="absolute top-4 right-4 bg-white text-emerald-700 text-xs font-bold px-3 py-1 rounded-2xl shadow">
                            ${product.category}
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="font-semibold leading-snug mb-4 line-clamp-2 min-h-[52px]">${product.name}</h3>
                        <div class="flex items-center justify-between">
                            <div>
                                <span class="text-3xl font-bold text-emerald-700">${product.price}</span>
                                <span class="text-zinc-400 text-sm">‚ÇΩ</span>
                            </div>
                            <button onclick="addToCart(${product.id})" 
                                    class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-2xl text-sm font-semibold transition flex items-center gap-2">
                                <i class="fa-solid fa-cart-plus"></i>
                                –ö—É–ø–∏—Ç—å
                            </button>
                        </div>
                    </div>
                `
                grid.appendChild(card)
            })
        }
        
        // Render care products (same as products but different subset)
        function renderCareProducts() {
            const grid = document.getElementById('careGrid')
            grid.innerHTML = ''
            
            const careProducts = products.slice(4)
            
            careProducts.forEach(product => {
                const card = document.createElement('div')
                card.className = `bg-white rounded-3xl overflow-hidden border border-zinc-100 product-card`
                card.innerHTML = `
                    <img src="${product.image}" class="w-full h-52 object-cover">
                    <div class="p-6">
                        <p class="text-emerald-600 text-xs font-medium">${product.category}</p>
                        <h4 class="font-semibold mt-1 leading-tight">${product.name}</h4>
                        <div class="flex justify-between items-end mt-6">
                            <div class="text-2xl font-bold">${product.price} <span class="text-base font-normal text-zinc-400">‚ÇΩ</span></div>
                            <button onclick="addToCart(${product.id}); event.stopImmediatePropagation()" 
                                    class="bg-emerald-600 text-white text-sm px-6 py-2.5 rounded-2xl">–í –∫–æ—Ä–∑–∏–Ω—É</button>
                        </div>
                    </div>
                `
                grid.appendChild(card)
            })
        }
        
        // Add to cart
        function addToCart(id) {
            const product = products.find(p => p.id === id)
            if (!product) return
            
            const existing = cart.find(item => item.id === id)
            if (existing) {
                existing.quantity = (existing.quantity || 1) + 1
            } else {
                cart.push({...product, quantity: 1})
            }
            
            updateCartCount()
            
            // Toast
            showToast(`${product.name} –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É`)
        }
        
        function updateCartCount() {
            let count = 0
            cart.forEach(item => count += (item.quantity || 1))
            document.getElementById('cartCount').textContent = count
        }
        
        // Cart modal
        function toggleCart() {
            const modal = document.getElementById('cartModal')
            modal.classList.toggle('hidden')
            
            if (!modal.classList.contains('hidden')) {
                renderCart()
            }
        }
        
        function renderCart() {
            const container = document.getElementById('cartItems')
            container.innerHTML = ''
            
            if (cart.length === 0) {
                container.innerHTML = `<p class="text-center py-12 text-zinc-400">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</p>`
                document.getElementById('cartTotal').textContent = `0 ‚ÇΩ`
                return
            }
            
            let total = 0
            
            cart.forEach((item, index) => {
                const qty = item.quantity || 1
                const itemTotal = item.price * qty
                total += itemTotal
                
                const div = document.createElement('div')
                div.className = "flex gap-6"
                div.innerHTML = `
                    <img src="${item.image}" class="w-20 h-20 object-cover rounded-2xl">
                    <div class="flex-1">
                        <div class="flex justify-between">
                            <p class="font-medium leading-tight">${item.name}</p>
                            <button onclick="removeFromCart(${index})" class="text-red-400 text-xl leading-none">√ó</button>
                        </div>
                        <p class="text-emerald-600 text-sm mt-1">${item.price} ‚ÇΩ √ó ${qty}</p>
                        
                        <div class="flex items-center gap-4 mt-4">
                            <button onclick="changeQuantity(${index}, -1)" class="w-8 h-8 flex items-center justify-center border rounded-xl hover:bg-zinc-100">-</button>
                            <span class="font-mono w-6 text-center">${qty}</span>
                            <button onclick="changeQuantity(${index}, 1)" class="w-8 h-8 flex items-center justify-center border rounded-xl hover:bg-zinc-100">+</button>
                        </div>
                    </div>
                    <div class="text-right font-semibold text-lg">${itemTotal} ‚ÇΩ</div>
                `
                container.appendChild(div)
            })
            
            document.getElementById('cartTotal').textContent = `${total} ‚ÇΩ`
        }
        
        function changeQuantity(index, delta) {
            cart[index].quantity = (cart[index].quantity || 1) + delta
            if (cart[index].quantity < 1) cart[index].quantity = 1
            renderCart()
            updateCartCount()
        }
        
        function removeFromCart(index) {
            cart.splice(index, 1)
            renderCart()
            updateCartCount()
        }
        
        function checkout() {
            if (cart.length === 0) return
            alert('üéâ –ó–∞–∫–∞–∑ –æ—Ñ–æ—Ä–º–ª–µ–Ω! –≠—Ç–æ –¥–µ–º–æ-–≤–µ—Ä—Å–∏—è.\n\n–°–ø–∞—Å–∏–±–æ, —á—Ç–æ –≤—ã–±—Ä–∞–ª–∏ –ó–µ–ª—ë–Ω—ã–π –ú–∏—Ä!')
            cart = []
            updateCartCount()
            toggleCart()
        }
        
        // Toast
        function showToast(message) {
            let toast = document.createElement('div')
            toast.style.position = 'fixed'
            toast.style.bottom = '30px'
            toast.style.left = '50%'
            toast.style.transform = 'translateX(-50%)'
            toast.style.backgroundColor = '#10b981'
            toast.style.color = 'white'
            toast.style.padding = '16px 28px'
            toast.style.borderRadius = '9999px'
            toast.style.boxShadow = '0 10px 15px -3px rgb(0 0 0 / 0.2)'
            toast.style.zIndex = '9999'
            toast.style.display = 'flex'
            toast.style.alignItems = 'center'
            toast.style.gap = '12px'
            toast.innerHTML = `
                <i class="fa-solid fa-check-circle"></i>
                <span>${message}</span>
            `
            document.body.appendChild(toast)
            
            setTimeout(() => {
                toast.style.transition = 'all 0.4s'
                toast.style.opacity = '0'
                toast.style.transform = 'translateX(-50%) translateY(20px)'
                setTimeout(() => toast.remove(), 400)
            }, 2800)
        }
        
        // Admin panel
        let currentEditingProduct = null
        
        function showAdminPanel() {
            document.getElementById('adminPanel').classList.remove('hidden')
            renderAdminProducts()
        }
        
        function hideAdminPanel() {
            document.getElementById('adminPanel').classList.add('hidden')
        }
        
        function renderAdminProducts() {
            const container = document.getElementById('adminProductsList')
            container.innerHTML = ''
            
            products.forEach((product, index) => {
                const div = document.createElement('div')
                div.className = "border border-zinc-200 rounded-3xl p-6 flex gap-6 items-center"
                div.innerHTML = `
                    <img src="${product.image}" class="w-24 h-24 object-cover rounded-2xl">
                    <div class="flex-1">
                        <input id="prodName${index}" value="${product.name}" 
                               class="block w-full font-medium text-lg border-0 focus:ring-0 p-0">
                        <div class="flex gap-4 mt-4">
                            <div>
                                <span class="text-xs text-zinc-400">–¶–µ–Ω–∞</span>
                                <input id="prodPrice${index}" value="${product.price}" type="number"
                                       class="block w-28 border rounded-xl px-4 py-2 text-lg font-semibold">
                            </div>
                            <div>
                                <span class="text-xs text-zinc-400">–ö–∞—Ç–µ–≥–æ—Ä–∏—è</span>
                                <input id="prodCat${index}" value="${product.category}" 
                                       class="block w-40 border rounded-xl px-4 py-2">
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col gap-3">
                        <button onclick="editProductImage(${index})" 
                                class="bg-zinc-100 hover:bg-zinc-200 transition px-5 py-2.5 text-xs rounded-2xl flex items-center gap-2">
                            <i class="fa-solid fa-image"></i> –ò–∑–º–µ–Ω–∏—Ç—å —Ñ–æ—Ç–æ
                        </button>
                        <button onclick="saveProductChanges(${index})" 
                                class="bg-emerald-600 text-white px-6 py-2.5 rounded-2xl text-sm">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
                        <button onclick="deleteProduct(${index})" 
                                class="text-red-500 text-xs hover:underline">–£–¥–∞–ª–∏—Ç—å</button>
                    </div>
                `
                container.appendChild(div)
            })
        }
        
        function editProductImage(index) {
            const input = document.createElement('input')
            input.type = 'file'
            input.accept = 'image/*'
            input.onchange = function(e) {
                const file = e.target.files[0]
                if (file) {
                    const reader = new FileReader()
                    reader.onload = function(ev) {
                        products[index].image = ev.target.result
                        renderAdminProducts()
                        renderProducts()
                        renderCareProducts()
                    }
                    reader.readAsDataURL(file)
                }
            }
            input.click()
        }
        
        function saveProductChanges(index) {
            const nameInput = document.getElementById(`prodName${index}`)
            const priceInput = document.getElementById(`prodPrice${index}`)
            const catInput = document.getElementById(`prodCat${index}`)
            
            products[index].name = nameInput.value
            products[index].price = parseInt(priceInput.value)
            products[index].category = catInput.value
            
            renderProducts()
            renderCareProducts()
            renderAdminProducts()
            
            showToast('–¢–æ–≤–∞—Ä –æ–±–Ω–æ–≤–ª—ë–Ω ‚úì')
        }
        
        function deleteProduct(index) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —Ç–æ–≤–∞—Ä?')) {
                products.splice(index, 1)
                renderProducts()
                renderCareProducts()
                renderAdminProducts()
            }
        }
        
        function addNewProduct() {
            const newProduct = {
                id: Date.now(),
                name: "–ù–æ–≤—ã–π —Ç–æ–≤–∞—Ä",
                price: 999,
                image: "https://picsum.photos/id/870/600/600",
                category: "–ù–æ–≤–∏–Ω–∫–∞"
            }
            products.unshift(newProduct)
            renderProducts()
            renderCareProducts()
            renderAdminProducts()
            showToast('–ù–æ–≤—ã–π —Ç–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω')
        }
        
        function saveHeroChanges() {
            const title = document.getElementById('adminHeroTitle').value
            const subtitle = document.getElementById('adminHeroSubtitle').value
            
            // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–æ–µ–∫—Ç–µ –æ–±–Ω–æ–≤–∏–ª–∏ –±—ã DOM, –∑–¥–µ—Å—å –ø—Ä–æ—Å—Ç–æ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            alert(`Hero –æ–±–Ω–æ–≤–ª—ë–Ω!\n–ó–∞–≥–æ–ª–æ–≤–æ–∫: ${title}\n–ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫: ${subtitle}\n\n(–í –ø–æ–ª–Ω–æ–π –≤–µ—Ä—Å–∏–∏ —ç—Ç–æ –ø—Ä–∏–º–µ–Ω–∏–ª–æ—Å—å –±—ã –Ω–∞ —Å–∞–π—Ç–µ)`)
            showToast('Hero –æ–±–Ω–æ–≤–ª—ë–Ω')
        }
        
        function resetAllData() {
            if (confirm('–°–±—Ä–æ—Å–∏—Ç—å –í–°–ï –¥–∞–Ω–Ω—ã–µ?')) {
                localStorage.removeItem('gardenStoreData')
                location.reload()
            }
        }
        
        // Search
        function performSearch() {
            const query = document.getElementById('searchInput').value.toLowerCase().trim()
            if (!query) {
                renderProducts()
                return
            }
            
            const filtered = products.filter(p => 
                p.name.toLowerCase().includes(query) || 
                p.category.toLowerCase().includes(query)
            )
            
            const grid = document.getElementById('productsGrid')
            grid.innerHTML = ''
            
            if (filtered.length === 0) {
                grid.innerHTML = `<p class="col-span-4 text-center py-20 text-zinc-400">–ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ –ø–æ –∑–∞–ø—Ä–æ—Å—É "${query}"</p>`
                return
            }
            
            filtered.forEach(product => {
                // –¢–æ—Ç –∂–µ —Ä–µ–Ω–¥–µ—Ä –∫–∞–∫ –≤ renderProducts, –Ω–æ —É–ø—Ä–æ—â—ë–Ω–Ω–æ
                const card = document.createElement('div')
                card.className = `product-card bg-white border border-zinc-100 rounded-3xl overflow-hidden`
                card.innerHTML = `
                    <img src="${product.image}" class="w-full h-64 object-cover">
                    <div class="p-6">
                        <h3 class="font-semibold">${product.name}</h3>
                        <div class="flex justify-between mt-6">
                            <div class="text-3xl font-bold">${product.price} ‚ÇΩ</div>
                            <button onclick="addToCart(${product.id});" class="bg-emerald-600 text-white px-6 py-3 rounded-2xl">–ö—É–ø–∏—Ç—å</button>
                        </div>
                    </div>
                `
                grid.appendChild(card)
            })
        }
        
        function toggleMobileMenu() {
            document.getElementById('mobileMenu').classList.toggle('hidden')
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.metaKey && e.key === "k") {
                e.preventDefault()
                document.getElementById('searchInput').focus()
            }
        })
        
        // Init
        function init() {
            // Load from localStorage if exists
            const saved = localStorage.getItem('gardenStoreData')
            if (saved) {
                const data = JSON.parse(saved)
                if (data.products) products = data.products
                if (data.cart) cart = data.cart
            }
            
            renderProducts()
            renderCareProducts()
            updateCartCount()
            
            // AOS init
            AOS.init({
                once: true,
                duration: 800
            })
            
            // Save to localStorage on unload
            window.addEventListener('beforeunload', () => {
                localStorage.setItem('gardenStoreData', JSON.stringify({
                    products: products,
                    cart: cart
                }))
            })
            
            // Demo message
            setTimeout(() => {
                if (Math.random() > 0.7) {
                    showToast('–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –¥–µ–º–æ-–≤–µ—Ä—Å–∏—é —Å–∞–π—Ç–∞!')
                }
            }, 2100)
        }
        
        // Expose some functions to window for inline onclick
        window.addToCart = addToCart
        window.toggleCart = toggleCart
        window.renderCart = renderCart
        window.changeQuantity = changeQuantity
        window.removeFromCart = removeFromCart
        window.checkout = checkout
        window.showAdminPanel = showAdminPanel
        window.hideAdminPanel = hideAdminPanel
        window.saveHeroChanges = saveHeroChanges
        window.editProductImage = editProductImage
        window.saveProductChanges = saveProductChanges
        window.deleteProduct = deleteProduct
        window.addNewProduct = addNewProduct
        window.resetAllData = resetAllData
        window.performSearch = performSearch
        window.toggleMobileMenu = toggleMobileMenu
        window.scrollToCategory = function(n) {
            document.getElementById('catalog').scrollIntoView({ behavior: 'smooth' })
        }
        
        // Start
        init()
    </script>
</body>
</html>
