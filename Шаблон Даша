        function deleteService(id) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —É—Å–ª—É–≥—É?')) {
                services = services.filter(s => s.id !== id);
                switchAdminTab(1); // refresh
            }
        }

        function addNewService() {
            const name = prompt("–ù–∞–∑–≤–∞–Ω–∏–µ –Ω–æ–≤–æ–π —É—Å–ª—É–≥–∏:");
            if (name) {
                services.push({
                    id: Date.now(),
                    name: name,
                    image: "https://picsum.photos/id/870/600/400",
                    options: [{ title: "–°—Ç–∞–Ω–¥–∞—Ä—Ç", price: "2500 ‚ÇΩ" }],
                    duration: "60 –º–∏–Ω"
                });
                switchAdminTab(1);
            }
        }

        function navigateTo(section) {
            document.querySelectorAll('section').forEach(s => {
                if (s.id === section) {
                    s.scrollIntoView({ behavior: 'smooth' });
                }
            });
        }

        // Initialize everything
        window.onload = function() {
            renderServices();
            
            // Fake live clock in console
            console.log('%c–î–µ–º–æ —Å–∞–π—Ç–∞ Harmony –≥–æ—Ç–æ–≤–æ! üå∏\n\n–°–∫–æ–ø–∏—Ä—É–π –≤–µ—Å—å –∫–æ–¥ –≤ —Ñ–∞–π–ª index.html –∏ –æ—Ç–∫—Ä–æ–π –≤ –±—Ä–∞—É–∑–µ—Ä–µ.\n–ê–¥–º–∏–Ω–∫–∞: –ø–∞—Ä–æ–ª—å "demo"', 'color:#8d5a3e; font-family:monospace');
        };
    </script>
