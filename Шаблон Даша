        function renderServices() {
            const grid = document.getElementById('services-grid');
            grid.innerHTML = '';
            
            services.forEach(service => {
                const card = document.createElement('div');
                card.className = `service-card bg-white rounded-3xl overflow-hidden shadow-sm border border-transparent hover:border-amber-200`;
                card.innerHTML = `
                    <div class="h-56 bg-cover bg-center" style="background-image: url('${service.image}')"></div>
                    <div class="p-6">
                        <div class="font-semibold text-xl mb-1">${service.name}</div>
                        <div class="text-xs text-emerald-600 mb-4">${service.duration}</div>
                        
                        ${service.options.map(opt => `
                            <div class="flex justify-between items-center py-2 border-t text-sm">
                                <span class="text-gray-600">${opt.title}</span>
                                <span class="font-medium">${opt.price}</span>
                            </div>
                        `).join('')}
                        
                        <button onclick="selectServiceFromCard(${service.id})" 
                                class="mt-6 w-full bg-[#8d5a3e] hover:bg-[#7a4f35] text-white py-3.5 rounded-2xl text-sm font-semibold transition-all">
                            –í—ã–±—Ä–∞—Ç—å
                        </button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function renderModalServices() {
            const container = document.getElementById('modal-services');
            container.innerHTML = '';
            
            services.forEach(service => {
                const div = document.createElement('div');
                div.className = `border-2 ${selectedService && selectedService.id === service.id ? 'border-[#8d5a3e]' : 'border-transparent'} rounded-3xl overflow-hidden cursor-pointer hover:border-amber-200 transition-all`;
                div.onclick = () => {
                    selectedService = service;
                    renderModalServices();
                };
                div.innerHTML = `
                    <div class="h-40 bg-cover" style="background-image: url('${service.image}')"></div>
                    <div class="p-5">
                        <div class="font-semibold">${service.name}</div>
                        <div class="text-xs text-gray-500 mt-1">${service.duration}</div>
                    </div>
                `;
                container.appendChild(div);
            });
        }

        function selectServiceFromCard(id) {
            selectedService = services.find(s => s.id === id);
            openBookingModal();
            setTimeout(() => {
                changeStep(1);
            }, 300);
        }

        function openBookingModal() {
            document.getElementById('booking-modal').classList.remove('hidden');
            document.getElementById('booking-modal').classList.add('flex');
            currentStep = 1;
            changeStep(1);
        }

        function closeBookingModal() {
            document.getElementById('booking-modal').classList.add('hidden');
            document.getElementById('booking-modal').classList.remove('flex');
            // Reset
            selectedService = null;
            selectedDate = null;
            selectedTime = null;
        }

        function changeStep(step) {
            currentStep = step;
            document.getElementById('current-step').textContent = step;
            
            // Hide all steps
            document.getElementById('step-1').classList.add('hidden');
            document.getElementById('step-2').classList.add('hidden');
            document.getElementById('step-3').classList.add('hidden');
            
            // Show current
            document.getElementById(`step-${step}`).classList.remove('hidden');
            
            // Update dots
            for (let i = 1; i <= 3; i++) {
                const dot = document.getElementById(`step-dot-${i}`);
                if (i < step) {
                    dot.querySelector('div:first-child').classList.add('bg-emerald-500', 'text-white');
                    dot.querySelector('div:first-child').classList.remove('bg-gray-200', 'text-gray-400');
                } else if (i === step) {
                    dot.querySelector('div:first-child').classList.add('bg-[#8d5a3e]', 'text-white');
                    dot.querySelector('div:first-child').classList.remove('bg-gray-200', 'text-gray-400');
                } else {
                    dot.querySelector('div:first-child').classList.add('bg-gray-200', 'text-gray-400');
                    dot.querySelector('div:first-child').classList.remove('bg-[#8d5a3e]', 'text-white', 'bg-emerald-500');
                }
            }
            
            document.getElementById('prev-btn').classList.toggle('hidden', step === 1);
            
            if (step === 1) renderModalServices();
            if (step === 2) renderCalendarAndTime();
        }

        function nextStep() {
            if (currentStep === 1 && !selectedService) {
                alert('–í—ã–±–µ—Ä–∏—Ç–µ —É—Å–ª—É–≥—É');
                return;
            }
            if (currentStep === 2 && (!selectedDate || !selectedTime)) {
                alert('–í—ã–±–µ—Ä–∏—Ç–µ –¥–∞—Ç—É –∏ –≤—Ä–µ–º—è');
                return;
            }
            if (currentStep < 3) {
                changeStep(currentStep + 1);
            } else {
                // Finish booking
                const name = document.getElementById('client-name').value;
                alert(`–°–ø–∞—Å–∏–±–æ, ${name}!\n\n–í–∞—à–∞ –∑–∞–ø–∏—Å—å –Ω–∞ ${selectedService.name} –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∞.\n\n–î–∞—Ç–∞: ${selectedDate} –≤ ${selectedTime}\n\n–í –±–ª–∏–∂–∞–π—à–µ–µ –≤—Ä–µ–º—è —Å –≤–∞–º–∏ —Å–≤—è–∂–µ—Ç—Å—è –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä.`);
                closeBookingModal();
                
                // Add to fake bookings
                bookings.unshift({
                    id: Date.now(),
                    date: selectedDate,
                    time: selectedTime,
                    client: name,
                    service: selectedService.name,
                    status: "–ù–æ–≤–∞—è"
                });
            }
        }

        function prevStep() {
            if (currentStep > 1) changeStep(currentStep - 1);
        }

        function renderCalendarAndTime() {
            // Simple calendar demo
            const grid = document.getElementById('calendar-grid');
            grid.innerHTML = '';
            
            const days = ['–ü–Ω','–í—Ç','–°—Ä','–ß—Ç','–ü—Ç','–°–±','–í—Å'];
            days.forEach(day => {
                const el = document.createElement('div');
                el.className = 'text-xs text-gray-400 py-2';
                el.textContent = day;
                grid.appendChild(el);
            });
            
            // Fake dates
            for (let i = 17; i <= 28; i++) {
                const dateEl = document.createElement('div');
                dateEl.className = `py-3 text-center text-sm cursor-pointer hover:bg-amber-100 rounded-xl transition-all ${selectedDate === `17.02.2026` && i === 17 ? 'bg-[#8d5a3e] text-white' : ''}`;
                dateEl.textContent = i;
                dateEl.onclick = () => {
                    selectedDate = `${i}.02.2026`;
                    renderCalendarAndTime();
                };
                grid.appendChild(dateEl);
            }
            
            // Time slots
            const timesContainer = document.getElementById('time-slots');
            timesContainer.innerHTML = '';
            const times = ["10:00", "11:00", "12:30", "14:00", "15:30", "17:00", "18:30", "19:30"];
            
            times.forEach(time => {
                const slot = document.createElement('div');
                slot.className = `py-4 text-center border rounded-2xl cursor-pointer transition-all text-sm font-medium ${selectedTime === time ? 'bg-[#8d5a3e] text-white border-transparent' : 'hover:border-amber-300'}`;
                slot.textContent = time;
                slot.onclick = () => {
                    selectedTime = time;
                    renderCalendarAndTime();
                };
                timesContainer.appendChild(slot);
            });
        }

